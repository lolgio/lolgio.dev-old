---
import type { Project } from '../types';
import { Icon } from "astro-icon";

const { project: Project } = Astro.props;
---
<section class="project-item flex py-8">
    <img src={Project.image} alt={Project.name} class="w-48 h-48 border-gray-900 dark:border-gray-100 border-4 transition-colors" />
    <div class="flex flex-col ml-6">
        <h2>{Project.name}.</h2>
        <p>{Project.description}</p>
        <br />
        <div class="tags flex flex-row">
            {Project.tags.map((tag: string) => (
                <span class="tag mr-4">
                    <h3>&gt {tag}</h3>
                </span>
            ))}
        </div>
        <br />
        <div class="project-links flex flex-row mt-2">
            {Project.link &&
                <a href={Project.link} target="_blank" class="mr-4">
                    <Icon name="mdi:link" class="w-12 h-12" />
                </a>
            }
            {Project.github && 
                <a href={Project.github} target="_blank" class="mr-4">
                    <Icon name="mdi:github" class="w-12 h-12" />
                </a>
            }
        </div>
    </div>
</section>